rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - customers can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Shops can read user data for orders
    }

    // Shops collection - shop owners can read/write their own shop
    match /shops/{shopId} {
      allow read: if true; // Anyone can view shops
      allow create: if request.auth != null && request.auth.uid == shopId;
      allow update, delete: if request.auth != null && request.auth.uid == shopId;
    }

    // Products collection - shop owners can manage their products
    match /products/{productId} {
      allow read: if true; // Anyone can view products
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.shopId;
    }

    // Orders collection
    match /orders/{orderId} {
      // Customers can create orders and read their own
      allow create: if request.auth != null;
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.customerId ||
         request.auth.uid == resource.data.shopId);
      // Shop owners can update orders (status changes)
      allow update: if request.auth != null &&
        request.auth.uid == resource.data.shopId;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.customerId;
    }
  }
}
